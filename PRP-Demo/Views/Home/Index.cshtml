@model PRP_Demo.Models.ApplicationUser
@using Microsoft.AspNet.Identity
@using PRP_Demo.Models

@{
    ViewBag.Title = "PRP-Running";
}

@{
    var manager = new UserManager<ApplicationUser>(new Microsoft.AspNet.Identity.EntityFramework.UserStore<ApplicationUser>(new ApplicationDbContext()));
    var currentUser = manager.FindById(User.Identity.GetUserId());
}

<div class="container-fluid myJumbotron">
    <div class="row align-items-center justify-content-center">
        <div class="col-md-2">

        </div>
        <div class="col-md-4">
            <img src="https://i.imgur.com/H4aO4la.jpg" alt="" class="jumboPic" />
        </div>
        <div class="col-md-5">
            <h1>PRP - Plain Running Plans</h1>
            <p class="lead">PRP is a free web application for creating your own minimalist running plan.</p>
            @if (currentUser != null)
            {
                <div class="btn btn-lg btn-default">@Html.ActionLink("Hello " + currentUser.FullName + "! »", "UserProfile", "Account", new { id = currentUser.Id }, null)</div>
            }
            else
            {
                <div class="btn btn-lg btn-default">@Html.ActionLink("Get Started »", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</div>
            }
        </div>
    </div>
</div>

